{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2017",
        "module": "ES2020",
        "moduleResolution": "node",
        "checkJs": true,
        "experimentalDecorators": false,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.module.css", "src/**/*.d.ts"],
    "exclude": ["node_modules"]
}
